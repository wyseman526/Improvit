<!-- JS FOR CLICK ANIMATIONS -->
<script>
const buttons = document.querySelectorAll(".btn");

buttons.forEach(btn => {
    btn.addEventListener("click", function() {
        btn.classList.add("animate");

        setTimeout(() => {
            btn.classList.remove("animate");
        }, 350);
    });
});
</script>

